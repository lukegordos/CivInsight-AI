# Environment Configuration
NODE_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://civinsight:password@localhost:5432/civinsight_ai
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=civinsight_ai
DATABASE_USER=civinsight
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Hugging Face Configuration
HUGGINGFACE_API_TOKEN=your-hf-api-token
HUGGINGFACE_API_URL=https://api-inference.huggingface.co/models

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=civinsight-media
S3_PRESIGNED_URL_EXPIRATION=3600

# API Configuration
API_V1_STR=/v1
PROJECT_NAME=CivInsight AI
PROJECT_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# External APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# ML Configuration
ML_CONFIDENCE_THRESHOLD=0.7
IMAGE_MAX_SIZE=10485760  # 10MB
VIDEO_MAX_SIZE=104857600  # 100MB
BATCH_SIZE=32

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_CREDENTIALS=True
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]
